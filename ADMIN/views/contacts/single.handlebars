<p class="text-center">{{contact.user.phone_number}}</p>
<p class="text-center">{{contact.user.user_name}}</p>

<div class="row">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-12">
				<div class="box">
					<div class="box-header">
						<h2 class="box-title">available groups</h2>
					</div>
					<!-- /.box-header -->
					<div class="box-body">
						<div class="col-lg-12">
							<table class="table datatable table-bordered table-hover">
								<thead>
									<tr>
										<th>group name</th>
										<th></th>
									</tr>
								</thead>
								<tbody>
									{{#each contact.availableGroups as |group|}}
									<tr>
										<td>{{group.name}}</td>
										<td><a href="{{group.asign_link}}" class="btn btn-info btn-xs">assign</a></td>
									</tr>
									{{/each}}
								</tbody>

							</table>
						</div>
					</div>

				</div>

			</div>
		</div>


	</div>
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-12">
				<div class="box">
					<div class="box-header">
						<h2 class="box-title">joined groups</h2>
					</div>
					<!-- /.box-header -->
					<div class="box-body">
						<div class="col-lg-12">
							<table class="table datatable table-bordered table-hover">
								<thead>
									<tr>
										<th>group name</th>
										<th></th>
									</tr>
								</thead>
								<tbody>
									{{#each contact.joinedGroups as |group|}}
									<tr>
										<td>{{group.name}}</td>
										<td><a href="{{de_asign_link}}" class="btn btn-danger btn-xs">remove</a></td>
									</tr>
									{{/each}}
								</tbody>

							</table>
						</div>
					</div>

				</div>

			</div>
		</div>
	</div>
	
</div>







