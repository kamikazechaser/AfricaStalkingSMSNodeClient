<div class="row">
	<div class="col-lg-12">
		<div class="box">
			<div class="box-header">
				<h2 class="box-title">{{name}}</h2>
				{{>export}}
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="col-lg-12">
				  
					<table class="table datatable table-bordered table-hover">
						<thead>
							<tr>
								<th>Contact name</th>
								<th>Contact number</th>
								<th></th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							{{#each contacts as |contact|}}
							<tr>
								<td>{{contact.user_name}}</td>
								<td>{{contact.phone_number}}</td>
								<td>
									<div class="btn-group">
										<a href="{{edit_link}}" class="btn btn-xs btn-info">View Profile</a>
									</div>
								</td>
								<td>
									<div class="btn-group">
										<a href="{{delete_link}}" class="btn btn-xs btn-danger">Delete</a>
									</div>
								</td>
							</tr>
							{{/each}}


						</tbody>

					</table>
				 
				</div>
			</div>
			
		</div>

	</div>
</div>




