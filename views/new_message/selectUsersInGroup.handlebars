<div class="row">
	<div class="col-lg-3">
		<div class="box">
			<div class="box-header with-boarder">
			<h3 class="text-center">Your message</h3>
			</div>
			<div class="box-body text-center">
				{{session.message.prefix}}
				<hr>
				{{session.message.title}}
				<hr>
				{{session.message.message}}
			</div>
		</div>
	</div>
	<div class="col-lg-9">
		<div class="box">
			<form action="" method="post" id="frm-datatable">
				<div class="box-header">
					<h2 class="box-title">{{name}}</h2>
					{{>export}}
				</div>
				<!-- /.box-header -->
				<div class="box-body">
					<div class="col-lg-12">
						<table class="table datatable-checkable table-bordered table-hover">
							<thead>
								<tr>
									<th><input name="select_all" value="1" type="checkbox"></th>
									<th>name</th>
									<th>number</th>
								</tr>
							</thead>
							<tbody>
								{{#each contacts as |contact|}}
								<tr>
									<td>{{contact.phone_number}}</td>
									<td>{{contact.name}}</td>
									<td>{{contact.phone_number}}</td>
								</tr>
								{{/each}}
							</tbody>
						</table>
					</div>
				</div>
				<div class="box-footer">
					<p><button type="submit" class="btn btn-info pull-right">Send to selected</button></p>
				</div>
			</form>
			
		</div>

	</div>
</div>




